<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiApp_App.Mvvm.ViewModels"
             x:DataType="{x:Type viewModels:AddPageViewModel}"
             x:Class="MauiApp_App.Mvvm.Views.AddPage"
             Title="AddPage">

    <VerticalStackLayout>
        <Entry Text="{Binding User.FirstName}" />
        <Entry Text="{Binding User.LastName}" />
        <Entry Text="{Binding User.Email}" />
        <Button Command="{Binding SaveCommand}" Text="Save" />
    </VerticalStackLayout>
</ContentPage>