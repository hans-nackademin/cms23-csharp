<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiApp_App.Mvvm.ViewModels"
             x:DataType="{x:Type viewModels:DetailsPageViewModel}"
             x:Class="MauiApp_App.Mvvm.Views.DetailsPage"
             Title="DetailsPage">

    <VerticalStackLayout>
        <Label Text="{Binding User.FirstName}" />
        <Button Command="{Binding GoToEditCommand}" Text="Edit" />
    </VerticalStackLayout>
</ContentPage>